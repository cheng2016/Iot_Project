<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/enable_color" />
            <corners
                android:bottomLeftRadius="@dimen/widget_size_12"
                android:bottomRightRadius="@dimen/widget_size_12"
                android:topLeftRadius="@dimen/widget_size_12"
                android:topRightRadius="@dimen/widget_size_12" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <!-- <solid android:color="#298D8B" /> -->
            <solid android:color="@color/enable_color" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/theme_color" />
            <corners
                android:bottomLeftRadius="@dimen/widget_size_12"
                android:bottomRightRadius="@dimen/widget_size_12"
                android:topLeftRadius="@dimen/widget_size_12"
                android:topRightRadius="@dimen/widget_size_12" />
        </shape>
    </item>
</selector>