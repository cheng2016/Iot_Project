<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/widget_min_size_1" android:color="@color/theme_color" />
            <solid android:color="@color/button_plan_color_" />
            <corners
                android:bottomLeftRadius="@dimen/widget_size_16"
                android:bottomRightRadius="@dimen/widget_size_16"
                android:topLeftRadius="@dimen/widget_size_16"
                android:topRightRadius="@dimen/widget_size_16" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:width="@dimen/widget_min_size_1" android:color="@color/theme_color" />
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/widget_size_16"
                android:bottomRightRadius="@dimen/widget_size_16"
                android:topLeftRadius="@dimen/widget_size_16"
                android:topRightRadius="@dimen/widget_size_16" />
        </shape>
    </item>
</selector>