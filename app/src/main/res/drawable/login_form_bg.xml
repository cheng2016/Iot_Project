<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <!--     <item
             android:left="2dp"
             android:top="2dp"
             android:right="2dp"
             android:bottom="2dp">-->
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="-180"
                android:endColor="#9930d6dc"
                android:centerColor="#00ffffff"
                android:startColor="@color/transparent" />

            <corners
                android:radius="@dimen/widget_size_8" />
<!--            <stroke
                android:width="@dimen/widget_min_size_1"
                android:color="#28000000" />-->
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="@dimen/widget_min_size_2"
        android:left="@dimen/widget_min_size_2"
        android:right="@dimen/widget_min_size_2"
        android:top="@dimen/widget_min_size_2">
        <shape android:shape="rectangle">

            <gradient
                android:angle="-180"
                android:endColor="#9930d6dc"
                android:centerColor="#00ffffff"
                android:startColor="@color/transparent" />
            <!--                android:centerColor="#18ffffff"-->

<!--            <corners
                android:bottomLeftRadius="@dimen/widget_size_8"
                android:bottomRightRadius="@dimen/widget_size_8"
                android:topLeftRadius="@dimen/widget_size_8"
                android:topRightRadius="@dimen/widget_size_8" />-->
            <corners
                android:radius="@dimen/widget_size_8" />

            <stroke
                android:width="@dimen/widget_min_size_1"
                android:color="#26000000" />
        </shape>
    </item>
</layer-list>