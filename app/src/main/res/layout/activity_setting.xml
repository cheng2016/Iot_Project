<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />


    <RelativeLayout
        android:id="@+id/message_notify_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:layout_marginTop="@dimen/widget_size_30"
        android:background="@drawable/line_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_min_size_1"
            android:background="@color/item_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_8"
            android:drawableLeft="@mipmap/icn_message"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="消息提醒"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modify_password_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_8"
            android:drawableLeft="@mipmap/icn_modifypassword"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:layout_marginTop="@dimen/widget_size_30"
        android:background="@drawable/line_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_min_size_1"
            android:background="@color/item_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_8"
            android:drawableLeft="@mipmap/icn_checkupdate"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="检查更新"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/version_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawablePadding="@dimen/widget_size_10"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/hint_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clean_cache_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_8"
            android:drawableLeft="@mipmap/icn_clear"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/file_size_tv"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawablePadding="@dimen/widget_size_10"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/disable_text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:layout_marginTop="@dimen/widget_size_30"
        android:background="@drawable/line_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_min_size_1"
            android:background="@color/item_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center"
            android:text="退出登录"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/confirm_text_color" />

    </RelativeLayout>
</LinearLayout>