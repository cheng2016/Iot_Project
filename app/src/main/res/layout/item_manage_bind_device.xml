<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_size_16"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/device_img"
            android:layout_width="@dimen/widget_size_60"
            android:layout_height="@dimen/widget_size_60"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/main_icn_fenxiyi" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/is_admin"
            android:layout_width="@dimen/widget_size_20"
            android:layout_height="@dimen/widget_size_20"
            android:layout_gravity="bottom|right"
            app:srcCompat="@mipmap/icn_device_admin1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="@dimen/widget_size_200"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/widget_size_12"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:layout_marginTop="@dimen/widget_size_12"
        android:layout_toRightOf="@+id/head_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="设备昵称"
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_2"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="分析仪"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_6"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="设备ID："
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_2"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="DSADA16546449874132DSA"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_min_size_2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/widget_size_16"
        android:layout_marginRight="@dimen/widget_size_16"
        android:background="@color/splite_line" />
</RelativeLayout>