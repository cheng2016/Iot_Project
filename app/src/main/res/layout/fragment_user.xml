<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <RelativeLayout
        android:id="@+id/user_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_size_80"
        android:layout_marginBottom="@dimen/widget_size_30"
        android:layout_marginTop="@dimen/widget_size_30"
        android:background="@drawable/line_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_min_size_1"
            android:background="@color/item_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/head_img"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/widget_size_60"
                android:layout_height="@dimen/widget_size_60"
                android:layout_marginLeft="@dimen/widget_size_6"
                android:src="@mipmap/btn_male_small"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_size_8"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/product_description_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_min_size_1"
            android:background="@color/item_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawableLeft="@mipmap/icn_product_description"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="产品说明"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wx_public_number_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawableLeft="@mipmap/icn_wechat_qr"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="微信公众号"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawableLeft="@mipmap/icn_feedback"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawableLeft="@mipmap/icn_aboutus"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/user_info_cell_height"
        android:background="@drawable/line_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/widget_size_6"
            android:drawableLeft="@mipmap/icn_set_small"
            android:drawablePadding="@dimen/widget_size_6"
            android:gravity="center_vertical"
            android:text="设置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@mipmap/icn_goto_big"
            android:ellipsize="middle"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

    </RelativeLayout>


</LinearLayout>