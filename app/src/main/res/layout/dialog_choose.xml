<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/plan_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_40"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/widget_size_13"
            android:padding="2dp"
            android:text="紧急联系人"
            android:textColor="@color/text_title_narmal"
            android:textSize="@dimen/font_size_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/widget_size_13"
            android:padding="2dp"
            android:text="通讯录"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_16"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_100"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/widget_size_13"
            android:layout_marginRight="@dimen/widget_size_13"
            android:background="@drawable/shape_edit"
            android:hint="姓名："
            android:maxLength="18"
            android:maxLines="1"
            android:padding="@dimen/widget_size_8"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15"
            android:visibility="visible" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/widget_size_13"
            android:layout_marginRight="@dimen/widget_size_13"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edit"
            android:hint="电话："
            android:inputType="number"
            android:maxLength="18"
            android:maxLines="1"
            android:padding="@dimen/widget_size_8"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splite_line"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_h"
        android:background="@drawable/plan_lr_shape"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_plan_left_selector"
            android:text="@string/confirm"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_15" />

        <View
            android:layout_width="@dimen/widget_min_size_1"
            android:layout_height="@dimen/widget_size_20"
            android:layout_gravity="center_vertical"
            android:background="@color/splite_line" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_plan_right_selector"
            android:text="@string/cancel"
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>