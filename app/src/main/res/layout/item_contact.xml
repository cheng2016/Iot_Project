<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contact_container"
        android:layout_width="match_parent"
        android:background="@drawable/edit_main_border"
        android:minHeight="@dimen/widget_size_45"
        android:layout_marginBottom="@dimen/widget_size_8"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:gravity="center"
            android:text="王宝强"
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/widget_size_16"
            android:gravity="center"
            android:text="18202745852"
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/btn_addcontact"
            android:drawablePadding="@dimen/widget_size_5"
            android:text="添加联系人"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>
</RelativeLayout>