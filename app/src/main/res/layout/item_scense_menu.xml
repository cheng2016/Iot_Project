<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/widget_size_3"
    android:gravity="center"
    android:orientation="vertical">

    <!--    <ImageView
            android:id="@+id/menu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/btn_left_car" />-->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/menu_img"
        android:layout_width="@dimen/widget_size_30"
        android:layout_height="@dimen/widget_size_30"
        android:layout_marginTop="@dimen/widget_size_5"
        android:src="@drawable/menu_car_selector"/>


    <TextView
        android:id="@+id/menu_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_8"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="兰博基尼"
        android:textColor="@drawable/radiobutton_color_selector" />

</LinearLayout>