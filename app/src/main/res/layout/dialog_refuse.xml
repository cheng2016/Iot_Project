<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widget_size_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/plan_shape"
    android:minWidth="@dimen/widget_size_300"
    android:orientation="vertical"
    android:padding="@dimen/widget_size_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_size_8"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/widget_size_14"
        android:paddingBottom="@dimen/widget_size_14"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_size_36"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="标题"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_10"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_14"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/widget_size_5"
            android:text="这是一条消息！"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/widget_size_16"
            android:visibility="visible" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/reapply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_45"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_8"
        android:layout_marginRight="@dimen/widget_size_20"
        android:background="@drawable/dialog_border_btn"
        android:gravity="center"
        android:text="重新申请"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/font_size_16" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_45"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_16"
        android:layout_marginRight="@dimen/widget_size_20"
        android:background="@drawable/dialog_border_btn"
        android:gravity="center"
        android:text="移除设备"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/font_size_16" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_45"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_16"
        android:layout_marginRight="@dimen/widget_size_20"
        android:layout_marginBottom="@dimen/widget_size_16"
        android:background="@drawable/dialog_solid_btn"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>