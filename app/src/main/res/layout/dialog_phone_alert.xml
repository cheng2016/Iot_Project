<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/plan_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="选择报警电话"
            android:textColor="@color/text_title_narmal"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:layout_width="@dimen/widget_size_180"
            android:layout_height="@dimen/widget_min_size_1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="#DBDBDB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_100"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/layout_1"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_80"
                android:layout_margin="@dimen/widget_size_5"
                android:background="@drawable/border_phone_dialog"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="公安报警"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"
                        android:text="110"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />
                </LinearLayout>


                <CheckBox
                    android:id="@+id/checkbox_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/widget_size_5"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:button="@drawable/checkbox_phone_dialog"
                    android:checked="false"
                    android:enabled="false" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_2"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_80"
                android:layout_margin="@dimen/widget_size_5"
                android:background="@drawable/border_phone_dialog"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="急救电话"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"
                        android:text="120"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />
                </LinearLayout>


                <CheckBox
                    android:id="@+id/checkbox_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/widget_size_5"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:button="@drawable/checkbox_phone_dialog"
                    android:enabled="false" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_3"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_80"
                android:layout_margin="@dimen/widget_size_5"
                android:background="@drawable/border_phone_dialog"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="火警"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:padding="2dp"
                        android:text="119"
                        android:textColor="@color/disable_text"
                        android:textSize="16sp"
                        android:visibility="visible" />
                </LinearLayout>


                <CheckBox
                    android:id="@+id/checkbox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/widget_size_5"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:button="@drawable/checkbox_phone_dialog"
                    android:enabled="false" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="@color/splite_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_h"
        android:background="@drawable/plan_lr_shape"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <Button
            android:id="@+id/confirm"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_plan_left_selector"
            android:text="@string/confirm"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_15" />

        <View
            android:layout_width="@dimen/widget_min_size_1"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/widget_size_20"
            android:background="@color/item_line" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_plan_right_selector"
            android:text="@string/cancel"
            android:textColor="@color/disable_text"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>