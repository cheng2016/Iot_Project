<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_detailbubble"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/widget_size_240"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_5"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/widget_size_16"
                android:gravity="right"
                android:includeFontPadding="false"
                android:text="位置"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/font_size_16"
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/widget_size_16"
                android:drawableRight="@mipmap/icn_car_right_go"
                android:drawablePadding="@dimen/widget_size_5"
                android:gravity="right"
                android:includeFontPadding="false"
                android:text="去这里"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/font_size_16"
                android:visibility="visible" />
        </RelativeLayout>


        <View
            style="@style/splite_line"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/widget_size_10"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:layout_marginRight="@dimen/widget_size_16"
            android:layout_marginBottom="@dimen/widget_size_8"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/widget_size_6"
            android:text="广州省深圳市南山区西丽街道龙珠大道106号珠光花半里"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/font_size_16"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:layout_marginTop="@dimen/widget_size_16"
            android:layout_marginRight="@dimen/widget_size_16"
            android:layout_marginBottom="@dimen/widget_size_8"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/widget_size_6"
            android:text="时间：2018.08.17 18:30"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/update_text_color"
            android:textSize="@dimen/font_size_12"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>